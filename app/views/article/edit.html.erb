<h1>Edit article</h1>

<%= @article.title%>

<%= form_with model: @article, url: edit_article_path, method: "patch" do |form| %>
    <% if form.object.errors.any? %>
        <ul class="list-disc pl-5"><% form.object.errors.full_messages.each do |error|%>
            <li><%= error %></li>
        <%end%>
        </ul>
    <% end %>
    <div>
        <div>
            <%= form.label :title %>
            <%= form.text_field :title%>
        </div>
        <div>
            <%= form.label :description %>
            <%= form.text_field :description %>
        </div>
        <div>
            <%= form.label :authur %>
            <%= form.text_field :authur %>
        </div>
        <div>
            <%= form.button%>
        </div>
    </div>
<% end %>